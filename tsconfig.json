{
  "compilerOptions": {
      "noImplicitAny": true,
      "target": "es6",
      "module": "ES6", // Change from 'commonjs' to 'es6' for ES module syntax
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "moduleResolution": "node", // Node's module resolution supports ES modules
      "esModuleInterop": true,
      "skipLibCheck": true,
      "declaration": true,
      "noEmit": true,
  },
  "include": ["src"]
}
